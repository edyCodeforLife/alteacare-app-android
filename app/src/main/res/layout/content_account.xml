<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accountBtnChangeProfile"
        style="@style/AccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_profile_account"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="start|center"
        android:text="@string/str_change_profile"
        android:textColor="@color/blueDark" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accountBtnFamily"
        style="@style/AccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/ic_family_account"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="start|center"
        android:text="@string/str_account_family"
        android:textColor="@color/blueDark" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accountBtnSetting"
        style="@style/AccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_setting"
        android:drawableRight="@drawable/ic_arrow_right"
        android:gravity="start|center"
        android:text="@string/ic_setting"
        android:textColor="@color/blueDark" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accountBtnAddAccount"
        style="@style/AccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="start|center"
        android:text="@string/add_account_plus"
        android:textColor="@color/primary"
        app:icon="@drawable/ic_family_account"
        app:iconGravity="start"
        app:iconTint="@color/primary" />


</LinearLayout>