<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/subtle">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step1"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_active_last_stepper"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textStep1"
        style="@style/TextInter600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/pay"
        android:textColor="@color/darker"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintStart_toEndOf="@+id/step1"
        app:layout_constraintTop_toTopOf="@+id/step1" />

    <View
        android:id="@+id/line1"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginStart="4dp"
        android:background="@color/lighter"
        app:layout_constraintBottom_toBottomOf="@+id/textStep1"
        app:layout_constraintStart_toEndOf="@+id/textStep1"
        app:layout_constraintTop_toTopOf="@+id/textStep1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_active_stepper"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line1"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textStep2"
        style="@style/TextInter600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/consultation_created"
        android:textColor="@color/blueDark"
        app:layout_constraintBottom_toBottomOf="@+id/step2"
        app:layout_constraintStart_toEndOf="@+id/step2"
        app:layout_constraintTop_toTopOf="@+id/step2" />


</androidx.constraintlayout.widget.ConstraintLayout>