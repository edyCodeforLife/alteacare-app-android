<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/viewDocumentToolbar"
        style="@style/TextInter500"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/subtle"
        android:gravity="center"
        android:text="Document"
        android:textColor="@color/darker"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/viewDocumentBtnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:src="@drawable/ic_close_black"
        app:layout_constraintBottom_toBottomOf="@id/viewDocumentToolbar"
        app:layout_constraintEnd_toEndOf="@id/viewDocumentToolbar"
        app:layout_constraintTop_toTopOf="@id/viewDocumentToolbar"
        tools:ignore="ContentDescription" />


    <ImageView
        android:id="@+id/viewDocumentImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDocumentToolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>