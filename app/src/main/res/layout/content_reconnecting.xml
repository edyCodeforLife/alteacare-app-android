<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayDark1">

    <id.altea.care.view.common.ui.RippleBackground
        android:id="@+id/dialogImgCallVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rb_color="@color/primary"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="6"
        app:rb_scale="6">

        <ImageView
            android:id="@+id/imgReconnecting"
            android:layout_width="@dimen/_194sdp"
            android:layout_height="@dimen/_194sdp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_reconnecting"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/contentReconnectingText"
            style="@style/TextInter400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgReconnecting"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/str_reconecting_label"
            android:textColor="@color/white" />
    </id.altea.care.view.common.ui.RippleBackground>


</androidx.constraintlayout.widget.ConstraintLayout>