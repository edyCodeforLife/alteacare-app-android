<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/subtle">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step1"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_step_done"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <TextView
        android:id="@+id/textStep1"
        style="@style/TextInter600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        tools:text="Pilih Spesialis"
        android:textColor="@color/darker"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintStart_toEndOf="@+id/step1"
        app:layout_constraintTop_toTopOf="@+id/step1" />

    <View
        android:id="@+id/line1"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginStart="4dp"
        android:background="@color/lighter"
        app:layout_constraintBottom_toBottomOf="@+id/textStep1"
        app:layout_constraintStart_toEndOf="@+id/textStep1"
        app:layout_constraintTop_toTopOf="@+id/textStep1" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step2"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_step_active"
        android:gravity="center"
        tools:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line1"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textStep2"
        style="@style/TextInter600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        tools:text="Buat Konsultasi"
        android:textColor="@color/blueDark"
        app:layout_constraintBottom_toBottomOf="@+id/step2"
        app:layout_constraintStart_toEndOf="@+id/step2"
        app:layout_constraintTop_toTopOf="@+id/step2" />


    <View
        android:id="@+id/line2"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginStart="4dp"
        android:background="@color/grayDark3"
        app:layout_constraintBottom_toBottomOf="@+id/textStep2"
        app:layout_constraintStart_toEndOf="@+id/textStep2"
        app:layout_constraintTop_toTopOf="@+id/textStep2" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/step3"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_step_inactive"
        android:gravity="center"
        tools:text="3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/line2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textStep3"
        style="@style/TextInter600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/grayDark3"
        app:layout_constraintBottom_toBottomOf="@+id/step3"
        app:layout_constraintStart_toEndOf="@+id/step3"
        app:layout_constraintTop_toTopOf="@+id/step3"
        tools:text="Konf" />


</androidx.constraintlayout.widget.ConstraintLayout>