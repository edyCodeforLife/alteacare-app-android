<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/textMedicalSpesialis"
        style="@style/TextInter600"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="@string/str_spesialis"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".12" />

    <TextView
        android:id="@+id/textNameDoctorMedicalSpesialis"
        style="@style/TextInter600"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/grayDark1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topGuidline"
        tools:text="dr. Cindy Simangunsong" />

    <TextView
        android:id="@+id/texTitleDoctorMedicalSpesialis"
        style="@style/TextInter500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/grayDark1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameDoctorMedicalSpesialis"
        tools:text="Sp. Anak - Endokrinologi" />


    <id.altea.care.view.common.ui.RippleBackground
        android:id="@+id/dialogImgCallSpecialist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rb_color="@color/primary"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="6"
        app:rb_scale="6">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgDoctorMedicalSpesialis"
            android:layout_width="@dimen/_194sdp"
            android:layout_height="@dimen/_194sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_call_video" />
    </id.altea.care.view.common.ui.RippleBackground>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomGuidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".82" />

    <TextView
        android:id="@+id/textView6"
        style="@style/TextInter600"
        android:layout_width="@dimen/_260sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_40sdp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:layout_marginBottom="16dp"
        android:text="@string/str_calling_wait_spesialis"
        android:textAlignment="center"
        android:textColor="@color/blueDark"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomGuidline" />


    <TextView
        android:id="@+id/textView16"
        style="@style/TextInter400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginBottom="53dp"
        android:text="@string/str_document_spesialis"
        android:gravity="center"
        android:textColor="@color/grayDark2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>