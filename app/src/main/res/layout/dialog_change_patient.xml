<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_18sdp"
    android:paddingTop="@dimen/_12sdp"
    android:paddingEnd="@dimen/_18sdp"
    android:paddingBottom="@dimen/_12sdp">

    <TextView
        style="@style/TextInter400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/dialog_change_patient"
        android:textColor="@color/grayDark3"
        android:textSize="@dimen/_11ssp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogBtnExit"
        style="@style/DefaultButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/accept_exit"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialogBtnCancel"
        style="@style/OutlineButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/cancel_dialog"
        android:textColor="@color/darker" />

</LinearLayout>