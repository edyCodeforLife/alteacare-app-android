<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_20sdp"
    android:paddingTop="8dp"
    android:paddingEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_12sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/view1"
        android:layout_width="56dp"
        android:layout_height="6dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/grayLight2"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp" />

    <TextView
        android:id="@+id/txtTitle1"
        style="@style/TextInter700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Pilihan Lainnya"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1" />

    <Button
        android:id="@+id/addressBottomSheetBtnPrimary"
        style="@style/OutlineButtonBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Jadikan Alamat Utama"
        android:textColor="@color/darker" />

    <Button
        android:id="@+id/addressBottomSheetBtnDelete"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/inter_bold"
        android:foreground="?selectableItemBackgroundBorderless"
        android:minHeight="@dimen/_38sdp"
        android:text="Hapus"
        android:textAllCaps="false"
        android:textColor="@color/red"
        android:textSize="@dimen/_13ssp" />

</LinearLayout>