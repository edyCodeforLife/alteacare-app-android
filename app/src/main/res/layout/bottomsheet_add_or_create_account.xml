<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_16sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view1"
            android:layout_width="56dp"
            android:layout_height="6dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/grayDark3"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp" />

        <TextView
            android:id="@+id/txtTitle1"
            style="@style/TextInter700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="@string/add_account"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            tools:text="Tambah Akun" />

        <Button
            android:id="@+id/btmSheetAccountBtnAdd"
            style="@style/OutlineBlueButtonWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="@string/login_with_existing_account"
            android:textColor="@color/darker"
            tools:text="Masuk dengan Akun Terdaftar" />

        <Button
            android:id="@+id/btmSheetAccountBtnCreate"
            style="@style/OutlineBlueButtonWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="@string/create_new_account"
            android:textColor="@color/darker"
            tools:text="Buat Akun Baru" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
