<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/onMedicalResumeSwipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ScrollView
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayLight4"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    style="@style/TextInter700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/complaint" />

                <TextView
                    android:id="@+id/medicalResumeTxtComplaint"
                    style="@style/TextInter400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/grayDark2"
                    tools:text="Sakit kepala kiri sejak 3 hari, berdenyut disertai muntah sejak 1 hari ini. Sakit kepala dirasakan memberat saat beraktivitas, berkurang saat istirahat. Tidak ada trauma kepala. Tidak ada kelemahan anggota gerak, nyeri ulu hati sejak 2 hari, riwayat terlambat makan, badan lemas." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    style="@style/TextInter700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diagnosis" />

                <TextView
                    android:id="@+id/medicalResumeTxtDiagnosis"
                    style="@style/TextInter400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/grayDark2"
                    tools:text="Migrain, Dispepsia" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    style="@style/TextInter700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_medicine" />

                <TextView
                    android:id="@+id/medicalResumeTxtMedicine"
                    style="@style/TextInter400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/grayDark2"
                    tools:text="analsik 500mg, 15 tablet 3x1 tablet setelah makan (bila sakit kepala).
Omeprazole 20mg, 10 tablet 2x1 tablet sebelum makan.
Sucralfat Susp, 100ml, 4x1 sendok makan sebelum makan.
Becom-c, 10 tablet, 1x1 tablet setelah makan (pagi)" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    style="@style/TextInter700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_support_checkup" />

                <TextView
                    android:id="@+id/medicalResumeTxtSupportCheckup"
                    style="@style/TextInter400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/grayDark2"
                    tools:text="- Pola makan secara teratur
- Hindari makanan pedas, minum kopi, soda, alcohol
- Istirahata teratur" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    style="@style/TextInter700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_consultation" />

                <TextView
                    android:id="@+id/medicalResumeTxtConsultation"
                    style="@style/TextInter400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/grayDark2"
                    tools:text="-" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingEnd="@dimen/_12sdp">

                <TextView
                    style="@style/TextInter700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/another_note" />

                <TextView
                    android:id="@+id/medicalResumeTxtNote"
                    style="@style/TextInter400"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:textColor="@color/grayDark2"
                    tools:text="- Bila sakit kepala tidak berkurang / bertambah berat lakukan CT Scan di Mitra Keluarga kelapa gading 23 Desember 2020
- Bila Nyeri ulu hati tidak berkurang disarankan untuk melakukan endoscopy di mitra keluarga kelapa gading tanggal 4 Januari 2021 " />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/inter_semi_bold"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0"
            android:minHeight="@dimen/_35sdp"
            android:text="@string/call_medical_advisor"
            android:textAllCaps="false"
            android:textSize="@dimen/_14ssp"
            app:cornerRadius="6dp"
            app:icon="@drawable/ic_conversation_gray"
            app:iconGravity="textStart"
            android:visibility="invisible"
            app:iconPadding="24dp"
            app:iconSize="@dimen/_23sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearContent"
            app:strokeColor="@color/primary" />

        <include
            android:id="@+id/medicalResumeContentEmpty"
            layout="@layout/content_empty_medical_resume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>